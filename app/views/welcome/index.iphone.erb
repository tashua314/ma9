<div id="page1" data-role="page">
  <div data-role="header"><h1>プラグNOW！</h1></div>

  <div data-role="content">
    <div class="top_pic">プラグNOW！</div>
    <div class="error_message"></div>
    <div class="action_area">
      <form action="/" method="POST" class="search_form">
        <div class="now">
          <input type="hidden" name="lat" />
          <input type="hidden" name="lng" />
        </div>
        
        <div class="search">
        </div>
      </form>
    </div>
    <br>
    <br />
    <br />
    <div class="list_area">
    <% if @distance.present? %>
      <ul data-role="listview" 
          data-filter="true" 
          data-filter-placeholder="検索" 
          data-inset="true">
      <% @distance.each_with_index do |dis, i| %>
        <li><a href="#page2" value="<%=@entry_ids[i] %>">
          <%= @titles[i] + "[" + dis.to_s + "m]" %>
        </a></li>
      <% end %>
      </ul>
    <% end %>
    </div><!-- end list_area -->
  </div><!-- end content -->

  <div data-role="footer">&copy; plug-now.com</div>
</div><!-- end page1 -->



